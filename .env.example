# Environment Variables
# Copy this file to .env and fill in the values

# Vercel
VERCEL_ENV=development

# API Keys (if using Supabase or other services)
SUPABASE_URL=
SUPABASE_KEY=

# Storage Options
# Set to "json" for local JSON storage, "supabase" for Supabase Storage, "cloudflare" for Cloudflare R2
STORAGE_TYPE=cloudflare

# Cloudflare R2 Storage (if STORAGE_TYPE=cloudflare)
CLOUDFLARE_R2_ACCOUNT_ID=69c5f4c6114b43b2bb233e67012060c4
CLOUDFLARE_ACCESS_KEY=your-access-key-here
CLOUDFLARE_SECRET_KEY=your-secret-key-here
CLOUDFLARE_BUCKET_NAME=fh-website-assets

# Edit Token Security
EDIT_TOKEN_SECRET=your-secure-token-here
EDIT_TOKEN_EXPIRY=86400 # 24 hours in seconds

# Content Editing Quota
DEFAULT_QUOTA=100
QUOTA_RESET_PERIOD=30 # days

# API Rate Limiting
API_RATE_LIMIT=100 # requests per minute
API_TIMEOUT=30000 # milliseconds

# Security Headers
ENABLE_SECURITY_HEADERS=true
CONTENT_SECURITY_POLICY=default-src 'self'; img-src 'self' https://pub-69c5f4c6114b43b2bb233e67012060c4.r2.dev https://images.unsplash.com data:; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; font-src 'self' https://cdn.jsdelivr.net; media-src 'self' https://pub-69c5f4c6114b43b2bb233e67012060c4.r2.dev;
